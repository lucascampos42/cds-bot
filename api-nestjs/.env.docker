# Configurações específicas para Docker

# Database
DATABASE_URL="postgresql://postgres:postgres@db:5432/nest-boilerplate?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-for-docker"
JWT_EXPIRES_IN="1h"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key-for-docker"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Server
PORT=3099
NODE_ENV=production

# Email Configuration (Desabilitado por padrão no Docker)
EMAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=your-email@gmail.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Optional: Redis (se implementado)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: File Upload (se implementado)
# UPLOAD_DEST=./uploads
# MAX_FILE_SIZE=5242880

# Optional: Monitoring (se implementado)
# MONITORING_ENABLED=false
# METRICS_PORT=9090